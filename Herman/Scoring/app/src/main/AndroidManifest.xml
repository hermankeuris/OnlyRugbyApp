<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.herman.scoring" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.herman.scoring.Scoring"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.herman.SelectScoringMethod.SelectScoringMethod"
            android:label="@string/app_name" >
            <intent-filter>
                <action  android:name="com.example.herman.SelectScoringMethod.SelectScoringMethod"/>

                <category  android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.herman.PlayerSelect.PlayerSelect"
            android:label="@string/app_name" >
            <intent-filter>
                <action  android:name="com.example.herman.PlayerSelect.PlayerSelect"/>

                <category  android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
